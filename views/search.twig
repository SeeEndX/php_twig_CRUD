{% extends "__layout.twig" %}

{% block content %}
<div class="ml-5 container">
    <h2>
    Поиск
    </h2>
    <hr>
    <form class="row ml-5 g-3 align-items-center">
     <div class="col-sm-3">
        <label class="visually-hidden" for="specificSizeSelect">Preference</label>
        <select name="object_type" class="form-select" id="specificSizeSelect">
        <option value="all">Все</option>
        <option selected value="ada">Ada</option>
        <option value="ampere">Ampere</option>
        <option value="turing">Turing</option>
        </select>
    </div>
    <div class="col-sm-3">
        <label class="visually-hidden" for="specificSizeInputName">Name</label>
        <input type="text" class="form-control" placeholder="Название" name="title">
    </div>
    <div class="col-sm-3">
        <label class="visually-hidden" for="specificSizeInputGroupUsername">Description</label>
        <input type="text" class="form-control" placeholder="Описание" name="description">
    </div>
    <div class="col-sm-2">
        <button type="submit" class="btn btn-info">Найти</button>
    </div>
    </form>
    
    {% for object in videocards %}
        <div class="border  p-2 mb-2">
          <a href="/videocard/{{ object.id }}">{{object.title}}</a>
        </div>              
    {% endfor %}  
    </div>
{% endblock %}